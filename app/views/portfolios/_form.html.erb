<%= form_for(@portfolios_items) do |form| %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

    <div class="field">
    <%= form.label :subtitle %>
    <%= form.text_area :subtitle %>
    </div>

  <div class="field">
    <%= form.label :body %>
    <%= form.text_area :body %>
  </div>

  <ul>
  <%= form.fields_for :technologies do |technology_form| %>
    <li>
    <%= technology_form.label :name %>
    <%= technology_form.text_field :name %>
    </li>
    <% end %>
  </ul>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>