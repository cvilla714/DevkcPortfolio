<div class="blog-post">
  <h2 class="blog-post-title"><%= link_to blog.title,blog %></h2>
  <p class="blog-post-meta">Published <%= distance_of_time_in_words(blog.created_at, Time.now) %>ago<a href="#">Mark</a></p>
  <% if logged_in?(:site_admin)%>
  <p class="blog-post-meta">
    <%= link_to blog.status,toggle_status_blog_path(blog.id) if logged_in?(:site_admin) %> /
    <%= link_to 'Edit', edit_blog_path(blog) if logged_in?(:site_admin) %> / 
    <%= link_to 'Destroy', blog, method: :delete, data: { confirm: 'Are you sure?' } if logged_in?(:site_admin) %>
  </p>
  <% end %>
  
  <p>
  <%= blog.body %>
  </p>
  <hr>
</div>